<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="7dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_productSample"
                android:layout_width="103dp"
                android:layout_height="145dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:contentDescription="@string/product_image"
                android:focusable="true"
                app:cardCornerRadius="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="45sp"
                android:layout_height="70sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="15dp"
                app:layout_constraintStart_toEndOf="@+id/tv_product"
                app:layout_constraintTop_toBottomOf="@+id/tv_applications"
                android:contentDescription="@string/click_to_website" />

            <TextView
                android:id="@+id/tv_applications"
                android:layout_width="260dp"
                android:layout_height="70dp"
                android:layout_marginStart="5dp"
                android:text="@string/applications"
                app:layout_constraintStart_toEndOf="@+id/iv_productSample"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/tv_product"
                android:layout_width="210sp"
                android:layout_height="70sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toEndOf="@+id/iv_productSample"
                app:layout_constraintTop_toBottomOf="@+id/tv_applications"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>